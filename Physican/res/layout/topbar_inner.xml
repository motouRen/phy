<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/lightgreen_titlebar" >

    <ImageView
        android:id="@+id/imageView_topbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/btn_back_normal" />

    <TextView
        android:id="@+id/textView_topbar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView_topbar_back"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_topbar_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_topbar_left"
        android:layout_alignBottom="@+id/textView_topbar_left"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>