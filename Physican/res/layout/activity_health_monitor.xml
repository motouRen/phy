<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/top_bar_normal_bg" >

        <TextView
            android:id="@+id/tv_buy_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="健康监测"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/lin_mygold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/doctor_fh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_icon2x" />

            <TextView
                android:id="@+id/doctor_yslb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主诉"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView 
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="当前手机蓝牙处于关闭状态、请打开手机蓝牙"/>
     <LinearLayout 
         android:id="@+id/ll_addLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:orientation="vertical">
       
     </LinearLayout>
     <View 
         android:layout_width="match_parent"
         android:layout_height="20dp"/>
     <RelativeLayout 
         android:id="@+id/rl_autoImport"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="没有蓝牙硬件、点此手动输入"/>
     </RelativeLayout>
</LinearLayout>
