<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/doctor_list_item_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp" >


        <TextView
            android:id="@+id/doctor_detail_item_xm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:text="柯海燕"
            android:textSize="18sp" 
            android:textColor="#414141"/>

        <TextView
            android:id="@+id/doctor_detail_item_ycq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/doctor_detail_item_xm"
            android:layout_marginTop="5dp"
            android:text="(2015-09-09)"
            android:textSize="18sp" 
            android:textColor="#414141"/>

        <TextView
            android:id="@+id/doctor_detail_item_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="非常满意" 
            android:textSize="20sp"
            android:textColor="#ff4b97"/>
        <TextView 
            android:id="@+id/doctor_detail_item_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:singleLine="true"
            android:layout_below="@+id/doctor_detail_item_xm"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/doctor_detail_ietm_xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="问题:" 
            android:textColor="#414141"/>


       

    </RelativeLayout>

</LinearLayout>